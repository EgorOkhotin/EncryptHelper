                    <object type="image/svg+xml" data="~/images/lock-bw4.svg" class="protected-lock bounceInRight animated">Your browser does not support SVG</object>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function pageExit() {
        let header = document.getElementsByClassName("two-header")[0];
        let mainContainer = document.getElementsByClassName("center-align")[0];
        header.classList.add("fadeOut");
        mainContainer.classList.add("fadeOut");

        header.classList.add("animated");
        mainContainer.classList.add("animated");

    }
</script>

