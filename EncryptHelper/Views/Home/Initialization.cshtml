@model InitializationViewModel
@{
    ViewData["Title"] = "Initialization";
}

<div class="container-fluid movable-exit hidden">
    <div class="masterPage">
        <div class="row movable-onload">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 class="two-header">Enter database password</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
        @using (Html.BeginForm("InitializeAsync", "Home", FormMethod.Get))
        {
            <div class="row movable-onload">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <input class="text-box single-line password-input text master-password-input" id="MasterPassword" autocomplete="off" name="MasterPassword" type="text" value="" />
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row movable-onload top-margin">
                <div class="col-md-5"></div>
                <div class="col-md-2">
                    <input class="plate-button setting-button" type="submit" value="Next" onclick="pageNext();" />
                </div>
                <div class="col-md-5"></div>
            </div>
        }
    </div>
</div>
<script>
    let direction = '@(ViewData["direction"])';
    if (direction === "back") {
        backPageLoad();
    }
    else forwardPageLoad();

    if ('@(ViewBag.Error)' !== '') {
        alert('@(ViewBag.Error)');
    }

    function getPass() {
        let element = document.getElementById("MasterPassword");
        return element.value;
    }
</script>

